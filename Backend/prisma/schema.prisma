// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:admin@localhost:5432/postgres"

}

model User {
  user_id     String    @id @default(uuid())
  name        String    
  email       String    @unique
  password    String
  salt        String
  phone       String?     
}

model Service {
  service_id    String    @id @default(uuid())
  name          String    @unique
  description   String?
  price         Decimal   
  time          Int    
}