// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_CONNECTION")
}

model User {
  user_id           String      @id @default(uuid())
  name              String
  email             String      @unique
  password          String
  salt              String
  phone             String?
  role              String?
  Schedule          Schedule[]
  AuthToken         AuthToken[]
}

model AuthToken {
  token_id          String      @id @default(uuid())
  token             String      @unique
  expiration_date   DateTime
  user_id_fk        String
  User              User        @relation(fields: [user_id_fk], references: [user_id])
}

model Service {
  service_id        String      @id @default(uuid())
  name              String      @unique
  description       String?
  price             Decimal
  time              Int
  Schedule          Schedule[]
}

model Schedule {
  schedule_id       String       @id @default(uuid())
  start_time        DateTime
  end_time          DateTime
  description       String?
  user_id_fk        String
  service_id_fk     String
  User              User         @relation(fields: [user_id_fk], references: [user_id])
  Service           Service      @relation(fields: [service_id_fk], references: [service_id])
}
